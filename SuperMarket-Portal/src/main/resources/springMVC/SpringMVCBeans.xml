<?xml version="1.0" encoding="GBK"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
    http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-4.1.xsd
    http://www.springframework.org/schema/aop
    http://www.springframework.org/schema/aop/spring-aop-4.1.xsd
    http://www.springframework.org/schema/tx
    http://www.springframework.org/schema/tx/spring-tx-4.1.xsd
    http://www.springframework.org/schema/mvc
    http://www.springframework.org/schema/mvc/spring-mvc-4.1.xsd ">

	<!--加载配置文件 -->
	<context:property-placeholder
		location="classpath:properties/*.properties" />

	<!--扫描处理器Handler -->
	<!--将controller bean创建在Spring MVC容器中（子容器） -->
	<!--此处我们使用SpringMVC来发布rest服务，所以我们此处需要扫描SpringMVC相关包 -->
	<context:component-scan
		base-package="com.ncs.portal.controller"></context:component-scan>

	<!--配置处理器映射器 -->
	<!--配置处理器适配器 -->
	<mvc:annotation-driven></mvc:annotation-driven>

	<!--配置视图解析器 -->
	<!--此处由于只是发布Rest服务，则不需要配置视图解析器 -->
	<bean id="ViewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<!-- 配置视图页面的前缀和后缀，方便开发 -->
		<property name="prefix" value="/WEB-INF/jsp/" />
		<property name="suffix" value=".jsp" />
	</bean>

	<!--拦截器配置（权限校验，登录认证...） -->
	<mvc:interceptors>
		<mvc:interceptor>
			<!--just test for item -->
			<mvc:mapping path="/item/**" />
			<!--<mvc:exclude-mapping path="/login"/> -->
			<!--指定拦截器实现类 -->
			<bean class="com.ncs.portal.intercepter.LoginIntercepter" />
		</mvc:interceptor>
	</mvc:interceptors>

	<!--静态资源的映射 -->
	<!-- <mvc:resources location="/WEB-INF/css/" mapping="/css/**"></mvc:resources> 
		<mvc:resources location="/WEB-INF/js/" mapping="/js/**"></mvc:resources> 
		<mvc:resources location="/WEB-INF/images/" mapping="/images/**"></mvc:resources> -->


	<!--配置文件解析器 -->

	<!--校验器（登录校验） -->

	<!--转换器（数据类型转换） -->

	<!--异常处理器 -->

</beans>